<Window x:Class="Chapter4_WPF.CalculateAge"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter4_WPF"
        mc:Ignorable="d"
        Title="Calculate Age" Height="300" Width="300">
    <GroupBox Header="WPF 생애계산기" HorizontalAlignment="Stretch" DockPanel.Dock="Top" FontSize="15">
        <DockPanel>
            <StackPanel HorizontalAlignment="Stretch" Margin="10" Orientation="Horizontal" DockPanel.Dock="Top">
                <TextBlock Text="생 년 월 일: " Margin="0,0,10,0" VerticalAlignment="Center"/>
                <DatePicker Width="150" VerticalAlignment="Top" Name="selectedDate"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal" DockPanel.Dock="Top">
                <TextBlock Text="현 재 날 짜: " Margin="0,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <DatePicker Width="150" VerticalAlignment="Top" Name="currentDate" />
            </StackPanel>
            <Grid DockPanel.Dock="Bottom"/>
        </DockPanel>
    </GroupBox>

</Window>
